<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="icon_home">
        <item name="android:layout_width">@dimen/unit24</item>
        <item name="android:layout_height">@dimen/unit24</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:tint">@color/colorWhite</item>
    </style>

    <style name="icon_home_text" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">@dimen/unit40</item>
        <item name="android:layout_height">@dimen/unit24</item>
        <item name="android:layout_margin">@dimen/unit3</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/unit10</item>
    </style>

    <style name="icon_home_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/unit12</item>
        <item name="android:clickable">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="text_light">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/unit12</item>
    </style>

    <style name="text_light_large">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/unit14</item>
    </style>

    <style name="text_dark_title">
        <item name="android:textColor">@color/colorDarkGrey</item>
        <item name="android:textSize">@dimen/unit24</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_dark_bold_large">
        <item name="android:textColor">@color/colorDarkGrey</item>
        <item name="android:textSize">@dimen/unit16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_dark_large">
        <item name="android:textColor">@color/colorDarkGrey</item>
        <item name="android:textSize">@dimen/unit16</item>
    </style>

    <style name="text_light_bold_large">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/unit16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_link">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/unit16</item>
        <item name="android:clickable">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_learn" parent="@style/Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/colorLearnLight</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="button_program" parent="@style/Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/colorLearnLight</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/unit24</item>
        <item name="android:layout_marginTop">@dimen/unit8</item>
        <item name="android:layout_marginRight">@dimen/unit3</item>
        <item name="android:textSize">@dimen/unit10</item>
    </style>

    <style name="button_floating_nav" parent="Widget.Design.FloatingActionButton">
        <item name="background">@color/colorAccent</item>
        <item name="tint">@color/colorLightGrey</item>
        <item name="android:layout_margin">@dimen/unit10</item>
    </style>


    <style name="ClassButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_margin">6dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="BigButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="BigButtonTitle" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BigButtonSubtitle" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ChipTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:layout_margin">@dimen/unit8</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:layout_margin">@dimen/unit8</item>
    </style>

    <!-- Theme used in custom layout example -->

</resources>
