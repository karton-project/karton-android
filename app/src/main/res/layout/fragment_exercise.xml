<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/exercise_progress_bar"
            android:layout_width="@dimen/unit120"
            android:layout_height="@dimen/unit120"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:indeterminateTint="@color/exercise_color"
            android:indeterminateTintMode="src_atop" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/exercise_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/take_note_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/unit14"
            android:background="@color/colorPrimary"
            app:backgroundTint="@color/exercise_color"
            app:srcCompat="@drawable/ic_draw" />

    </RelativeLayout>

</FrameLayout>