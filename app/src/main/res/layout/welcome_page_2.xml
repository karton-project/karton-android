<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDarkGrey"
    android:paddingTop="@dimen/unit16"
    android:paddingBottom="@dimen/unit16"
    android:paddingLeft="@dimen/unit50"
    android:paddingRight="@dimen/unit50">

    <TextView
        android:id="@+id/page_text"
        style="@style/text_light_bold_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/unit16"
        android:gravity="center"
        android:text="@string/welcome_page_2" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/page_text"
        android:layout_marginTop="@dimen/unit16"
        app:srcCompat="@drawable/w2" />

</RelativeLayout>
